datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model FlashCard {
  id        String    @id @default(uuid())
  question  String
  answer    String
  tags      String?
  updatedAt DateTime? @updatedAt
  createdAt DateTime  @default(now())
}
